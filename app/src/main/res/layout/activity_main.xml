<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10375c"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainActivityView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/chooseplanet"
        android:textAlignment="center"
        android:textColor="#faf4ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainActivityView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/btnMusic"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/mainActivityView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/amaranth"
        android:text="@string/click_to_play_music"
        android:textColor="#10375c"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAboutPage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btnMusic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="155dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/amaranth"
        android:text="@string/about_us"
        android:textColor="#faf4ff"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>
