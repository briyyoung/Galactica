<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10375c"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainActivityView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/chooseplanet"
        android:textAlignment="center"
        android:textColor="#faf4ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainActivityView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:drawableLeft="@drawable/ic_share_black_24dp"
        android:fontFamily="@font/amaranth"
        android:backgroundTint="#10375c"
        />

    <Button
        android:id="@+id/btnMusic"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainActivityView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/amaranth"
        android:text="@string/click_to_play_music"
        android:textColor="#10375c"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>
